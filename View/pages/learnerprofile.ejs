<%- include('../includes/head') %> <% if (!user) { %>
<script>
  location.href = "/auth?tab=login";
</script>
<% } %>

<div class="min-h-screen px-4 py-8">
  <div class="max-w-6xl mx-auto space-y-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-3">
        <div class="p-3 bg-primary/20 rounded-2xl">
          <i data-lucide="zap" class="w-6 h-6 text-primary"></i>
        </div>
        <div>
          <h1 class="text-2xl font-bold text-foreground">My Profile</h1>
          <p class="text-muted-foreground"><%= user && user.email %></p>
        </div>
      </div>
      <a
        href="/logout"
        class="inline-flex items-center px-3 py-2 rounded-md border border-border"
      >
        <i data-lucide="log-out" class="w-4 h-4 mr-2"></i> Logout
      </a>
    </div>

    <div class="grid gap-4 md:grid-cols-3">
      <div class="bg-gradient-card border border-border shadow-card rounded-xl">
        <div class="px-6 py-4 border-b border-border/50">
          <div class="text-sm flex items-center gap-2 text-muted-foreground">
            <i data-lucide="trending-up" class="w-4 h-4"></i>
            Level Progress
          </div>
        </div>
        <div class="p-6 space-y-3">
          <div class="flex items-baseline gap-2">
            <span class="text-3xl font-bold text-foreground">Level 3</span>
          </div>
          <div class="space-y-2">
            <div class="flex justify-between text-sm">
              <span class="text-muted-foreground">XP</span>
              <span class="font-semibold text-foreground">450 / 3000</span>
            </div>
            <div class="w-full h-2 bg-white/10 rounded">
              <div class="h-2 bg-primary rounded" style="width: 15%"></div>
            </div>
          </div>
          <p class="text-xs text-muted-foreground">2550 XP to next level</p>
        </div>
      </div>

      <div class="bg-gradient-card border border-border shadow-card rounded-xl">
        <div class="px-6 py-4 border-b border-border/50">
          <div class="text-sm flex items-center gap-2 text-muted-foreground">
            <i data-lucide="flame" class="w-4 h-4"></i>
            Current Streak
          </div>
        </div>
        <div class="p-6 space-y-3">
          <div class="flex items-baseline gap-2">
            <span class="text-3xl font-bold text-warning">2</span>
            <span class="text-lg text-muted-foreground">days</span>
          </div>
          <div class="flex items-center gap-1 text-sm text-muted-foreground">
            <i data-lucide="flame" class="w-4 h-4 text-warning"></i>
            <span>Keep it going!</span>
          </div>
          <p class="text-xs text-muted-foreground">
            Complete a quiz daily to maintain your streak
          </p>
        </div>
      </div>

      <div class="bg-gradient-card border border-border shadow-card rounded-xl">
        <div class="px-6 py-4 border-b border-border/50">
          <div class="text-sm flex items-center gap-2 text-muted-foreground">
            <i data-lucide="target" class="w-4 h-4"></i>
            Quiz Completion
          </div>
        </div>
        <div class="p-6 space-y-3">
          <div class="flex items-baseline gap-2">
            <span class="text-3xl font-bold text-success">40%</span>
          </div>
          <div class="space-y-2">
            <div class="flex justify-between text-sm">
              <span class="text-muted-foreground">Completed</span>
              <span class="font-semibold text-foreground">4 / 10</span>
            </div>
            <div class="w-full h-2 bg-white/10 rounded">
              <div class="h-2 bg-secondary rounded" style="width: 40%"></div>
            </div>
          </div>
          <p class="text-xs text-muted-foreground">6 quizzes remaining</p>
        </div>
      </div>
    </div>

    <div class="space-y-6">
      <div>
        <div class="grid grid-cols-3 max-w-md gap-2">
          <button
            data-tab="badges"
            data-group="profile-tabs"
            class="px-3 py-2 rounded-md bg-card shadow-sm"
          >
            <i data-lucide="trophy" class="w-4 h-4 mr-1 inline"></i> Badges
          </button>
          <button
            data-tab="skills"
            data-group="profile-tabs"
            class="px-3 py-2 rounded-md text-muted-foreground"
          >
            <i data-lucide="book-open" class="w-4 h-4 mr-1 inline"></i> Skills
          </button>
          <button
            data-tab="results"
            data-group="profile-tabs"
            class="px-3 py-2 rounded-md text-muted-foreground"
          >
            <i data-lucide="bar-chart-3" class="w-4 h-4 mr-1 inline"></i>
            Results
          </button>
        </div>
      </div>

      <div data-tab-content="badges" data-group="profile-tabs">
        <div
          class="bg-gradient-card border border-border shadow-card rounded-xl"
        >
          <div class="px-6 py-4 border-b border-border/50">
            <h3 class="text-foreground font-semibold">Your Achievements</h3>
          </div>
          <div class="p-6 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-4">
            <% const badges = [ {type: 'bronze', title: 'First Steps', desc:
            'Complete your first quiz', unlocked: true}, {type: 'silver', title:
            'Quick Learner', desc: 'Complete 10 quizzes', unlocked: true},
            {type: 'gold', title: 'Knowledge Master', desc: 'Complete 50
            quizzes', unlocked: false}, {type: 'special', title: 'Perfect
            Score', desc: 'Get 100% on a quiz', unlocked: true}, {type:
            'bronze', title: 'Streak Starter', desc: 'Maintain a 7-day streak',
            unlocked: false}, {type: 'silver', title: 'Dedicated', desc:
            'Maintain a 30-day streak', unlocked: false}, ]; const cfg = {
            bronze: {text: 'text-badge-bronze', bg: 'bg-badge-bronze/20',
            border: 'border-badge-bronze/40', glow:
            'shadow-[0_0_20px_hsl(var(--badge-bronze)/0.4)]'}, silver: {text:
            'text-badge-silver', bg: 'bg-badge-silver/20', border:
            'border-badge-silver/40', glow:
            'shadow-[0_0_20px_hsl(var(--badge-silver)/0.4)]'}, gold: {text:
            'text-badge-gold', bg: 'bg-badge-gold/20', border:
            'border-badge-gold/40', glow:
            'shadow-[0_0_20px_hsl(var(--badge-gold)/0.4)]'}, special: {text:
            'text-badge-special', bg: 'bg-badge-special/20', border:
            'border-badge-special/40', glow:
            'shadow-[0_0_30px_hsl(var(--badge-special)/0.5)]'}, };
            badges.forEach(function(b){ const unlocked = b.unlocked; const
            classes = unlocked ? (cfg[b.type].border + ' ' + cfg[b.type].glow +
            ' hover:scale-105 cursor-pointer') : 'border-border/50 grayscale
            opacity-60'; %>
            <div
              class="relative p-6 rounded-xl border-2 transition-all duration-300 bg-card <%= classes %>"
            >
              <% if (unlocked) { %>
              <div
                class="absolute inset-0 rounded-xl opacity-10 <%= cfg[b.type].bg %>"
              ></div>
              <% } %>
              <div class="relative flex items-start gap-4">
                <div
                  class="flex-shrink-0 w-16 h-16 rounded-xl flex items-center justify-center border-2 <%= unlocked ? (cfg[b.type].bg + ' ' + cfg[b.type].border) : 'bg-white/10 border-border/50' %>"
                >
                  <i
                    data-lucide="award"
                    class="w-8 h-8 <%= unlocked ? cfg[b.type].text : 'text-muted-foreground' %>"
                  ></i>
                </div>
                <div class="flex-1 min-w-0">
                  <h3 class="font-bold text-lg text-foreground mb-1">
                    <%= b.title %>
                  </h3>
                  <p class="text-sm text-muted-foreground leading-relaxed">
                    <%= b.desc %>
                  </p>
                  <% if(!unlocked){ %>
                  <div
                    class="mt-2 text-xs font-medium text-muted-foreground/80 italic"
                  >
                    Locked
                  </div>
                  <% } %>
                </div>
              </div>
              <% if (unlocked && b.type === 'special') { %>
              <div
                class="absolute inset-0 rounded-xl bg-gradient-to-r from-transparent via-white/10 to-transparent animate-shimmer bg-[length:200%_100%]"
              ></div>
              <% } %>
            </div>
            <% }); %>
          </div>
        </div>
      </div>

      <div class="hidden" data-tab-content="skills" data-group="profile-tabs">
        <div
          class="bg-gradient-card border border-border shadow-card rounded-xl"
        >
          <div class="px-6 py-4 border-b border-border/50">
            <h3 class="text-foreground font-semibold">Your Skills</h3>
          </div>
          <div class="p-6 space-y-4">
            <% const skills = [ {name: 'JavaScript', level: 80, bar:
            'bg-primary'}, {name: 'React', level: 60, bar: 'bg-secondary'},
            {name: 'TypeScript', level: 40, bar: 'bg-accent'}, ];
            skills.forEach(function(s){ %>
            <div class="space-y-2">
              <div class="flex justify-between text-sm">
                <span class="text-foreground font-medium"><%= s.name %></span>
                <span class="text-muted-foreground"
                  >Level <%= Math.floor(s.level/10) %></span
                >
              </div>
              <div class="h-2 bg-white/10 rounded-full overflow-hidden">
                <div
                  class="h-full <%= s.bar %>"
                  data-width="<%= s.level %>"
                  style="width: var(--w)"
                ></div>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
      </div>

      <div class="hidden" data-tab-content="results" data-group="profile-tabs">
        <div
          class="bg-gradient-card border border-border shadow-card rounded-xl"
        >
          <div class="px-6 py-4 border-b border-border/50">
            <h3 class="text-foreground font-semibold">Recent Quiz Results</h3>
          </div>
          <div class="p-6 space-y-3">
            <% const results = [ {title: 'JavaScript Basics', when: 'Completed 2
            days ago', score: '92%', xp: '+150 XP', color: 'text-success'},
            {title: 'React Hooks', when: 'Completed 5 days ago', score: '88%',
            xp: '+120 XP', color: 'text-success'}, {title: 'CSS Flexbox', when:
            'Completed 1 week ago', score: '75%', xp: '+100 XP', color:
            'text-warning'}, ]; results.forEach(function(r){ %>
            <div
              class="flex items-center justify-between p-3 bg-white/5 rounded-lg"
            >
              <div>
                <p class="font-medium text-foreground"><%= r.title %></p>
                <p class="text-sm text-muted-foreground"><%= r.when %></p>
              </div>
              <div class="text-right">
                <p class="text-lg font-bold <%= r.color %>"><%= r.score %></p>
                <p class="text-xs text-muted-foreground"><%= r.xp %></p>
              </div>
            </div>
            <% }); %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../includes/footer') %>
