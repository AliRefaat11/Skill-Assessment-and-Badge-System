<%- include("partials/header", {
  title: "Create Skill",
  pageCss: "/assets/css/admin/form-create.css"
}) %><%- include("partials/sidebar", { activeTab }) %>

<div class="pageHead">
  <div class="titleBlock">
    <h2>Assessments</h2>
    <p class="muted">Skill: <%= skill ? (skill.skillName || skill.name) : "Unknown" %></p>
  </div>
  <a class="btnPrimary" href="/admin/skills/<%= skill._id %>/assessments/new">+ Add Assessment</a>
</div>

<div id="alertBox" class="alert" style="display:none;"></div>

<div class="tableCard" data-skill-id="<%= skill._id %>">
  <table class="table">
    <thead>
      <tr>
        <th>Duration</th>
        <th>Total Marks</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody id="assessmentsTableBody">
      <tr><td colspan="4">Loading...</td></tr>
    </tbody>
  </table>
</div>

<%- include("partials/footer", { pageJs: "/assets/js/admin/assessments.js" }) %>
